<%= form_with(url: url_for(action: 'convert_create')) do |form| %>
  New Convert

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :convert_input, style: "display: block" %>
    <%= form.file_field :convert_input, direct_upload: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
